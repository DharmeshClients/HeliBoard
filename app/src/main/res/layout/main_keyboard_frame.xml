<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:orientation="vertical" >

    <include
        android:id="@+id/strip_container"
        layout="@layout/strip_container" />

    <!-- To ensure that key preview popup is correctly placed when the current system locale is
         one of RTL locales, layoutDirection="ltr" is needed in the SDK version 17+. -->
    <helium314.keyboard.latin.KeyboardWrapperView
        android:id="@+id/keyboard_view_wrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layoutDirection="ltr" >

        <helium314.keyboard.keyboard.MainKeyboardView
            android:id="@+id/keyboard_view"
            android:layoutDirection="ltr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <include
            android:id="@+id/emoji_palettes_view"
            layout="@layout/emoji_palettes_view" />
        <include
            android:id="@+id/clipboard_history_view"
            layout="@layout/clipboard_history_view" />

        <ImageButton
            android:id="@+id/btn_stop_one_handed_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:scaleType="fitCenter"
            style="?attr/suggestionWordStyle" />

        <ImageButton
            android:id="@+id/btn_switch_one_handed_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:scaleType="fitCenter"
            style="?attr/suggestionWordStyle" />

        <ImageButton
            android:id="@+id/btn_resize_one_handed_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:scaleType="fitCenter"
            style="?attr/suggestionWordStyle" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/gif_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="64dp"
            android:orientation="vertical"
            android:visibility="gone"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"/>

        <RelativeLayout
            android:id="@+id/search_view"
            android:layout_marginVertical="8dp"
            android:layout_marginHorizontal="16dp"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:visibility="gone"
            tools:visibility="visible">

            <EditText
                android:id="@+id/search_editor"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:hint="@string/label_search_key"
                android:paddingHorizontal="16dp"
                android:paddingVertical="4dp"
                android:layout_marginEnd="16dp"
                android:inputType="text"
                android:imeOptions="actionDone"
                android:singleLine="true"
                android:drawableStart="@drawable/sym_keyboard_search_lxx"
                android:drawableTint="@color/toast_background"
                android:layout_toStartOf="@id/search_close"
                android:layout_alignParentStart="true"
                android:background="@drawable/search_editor_background" />

            <ImageView
                android:id="@+id/search_editor_clear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@id/search_editor"
                android:src="@drawable/ic_close"
                android:layout_marginEnd="12dp"
                android:visibility="gone"
                android:layout_centerVertical="true"
                android:tint="#101010" />

            <ImageView
                android:id="@+id/search_close"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_search_arrow_right"
                android:background="#00000000"/>
        </RelativeLayout>
    </helium314.keyboard.latin.KeyboardWrapperView>

</LinearLayout>
